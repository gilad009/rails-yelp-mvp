<div class="container ">
  <h1 class="text-center mt-3 mb-3">List of Restaurants</h1>
    <% @restaurants.each do |restaurant| %>
      <%= link_to restaurant_path(restaurant), class: "text-decoration-none text-secondary" do %>
      <div class="card p-3 w-50 mx-auto mb-1">
        <h2> <%= restaurant.name %></h2>
        <p class="m-0"> <%= restaurant.address %></p>
      </div>
      <% end %>
    <% end  %>
    <div class="text-center p-2">
    <%= link_to "Add a new Restaurant", (new_restaurant_path), class: "btn btn-success" %>
    </div>
</div>
